#:kivy 1.0.9
Configuration: 

<Configuration>:
    url: url
    pwd: password
    name: name
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size
    GridLayout:
        rows: 5
        row_default_height: 30
        cols: 2
        col_default_width: 300
        padding: 20
        spacing: 10
        pos: self.pos
        size: self.size
        top: root.top - 50
        pwd: password
        name: name
        Image:
            source: './icon.png'
            height: 500
            allow_stretch: True
            keep_ratio: True       
        Label:
            text: ''
            height: 500
            size_hint_x: None
        Label: 
            text: 'Your cozy URL'
            color: [0,0,0,0]
            markup: True
        TextInput: 
            id: url
            focus: True
        Label: 
            text: 'Your cozy password'
            color: [0,0,0,0]
            markup: True
        TextInput:
            id: password 
            password: True
        Label: 
            text: 'Your device name'
            color: [0,0,0,0]
            markup: True
        TextInput:
            id: name 
        Label:
            text:''
        Button:
            text: 'Add'    
            on_press: root.install()
