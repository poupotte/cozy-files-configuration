#:kivy 1.0.9
Configuration: 

<TabTextInput@TextInput>:
    multiline: False

<Configuration>:
    url: url
    pwd: password
    name: name
    error: error
    progress: bar
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size
    GridLayout:
        rows: 6
        row_default_height: 30
        cols: 2
        col_default_width: 300
        padding: 20
        spacing: 10
        pos: self.pos
        size: self.size
        top: root.top - 50
        Image:
            source: './icon.png'
            height: 60
            size_hint_y: None
            allow_stretch: True
            keep_ratio: True       
        Label:
            text: ''
            height: 500
            size_hint_x: None   
        Label:
            text: ''
            height: 500
            size_hint_x: None
        ProgressBar:
            max: 100
            value: 0
            id: bar
        Label: 
            text: "L'url de votre cozy"
            color: [0,0,0,0]
            markup: True
        TabTextInput: 
            id: url
            focus: True
            next: password
        Label: 
            text: 'Le mot de passe de votre cozy'
            color: [0,0,0,0]
            markup: True
        TabTextInput:
            id: password 
            password: True
            next: name
        Label: 
            text: 'Le nom de votre device'
            color: [0,0,0,0]
            markup: True
        TabTextInput:
            id: name 
        Label:
            text:''
            id: error
            color: [1,0,0,0]
            markup: True
        Button:
            text: 'Add'    
            on_press: root.install()
