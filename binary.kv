#:kivy 1.0.9
Binary:

<Binary>:
    progress: bar
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size
    GridLayout:
        rows: 3
        row_default_height: 30
        cols: 1
        col_default_width: 300
        padding: 20
        spacing: 10
        pos: self.pos
        size: self.size
        top: root.top - 50
        Image:
            source: './icon.png'
            height: 500
            allow_stretch: True
            keep_ratio: True 
        Label: 
            text: "Telechargement des fichiers ..."
            color: [0,0,0,0]
            markup: True     
        ProgressBar:
            max: 100
            value: 0
            id: bar